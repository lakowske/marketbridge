[flake8]
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    .venv,
    venv,
    htmlcov,
    web

max-line-length = 100
docstring-convention = google

# Temporarily ignore errors to match current codebase state
extend-ignore =
    E203, W503, E231, E221, E222,
    D100, D101, D103, D104, D105, D107, D205, D212, D415,
    F401, F541, F811, F841,
    E402, E501, E722
